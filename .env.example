# ===================================================================
# SubSpark - Environment Variables Example
# Copy this file to .env and fill in your values
# ===================================================================

# -------------------------------------------------------------------
# Database Configuration (Required)
# -------------------------------------------------------------------
DB_HOST=localhost
DB_NAME=subspark
DB_USER=subspark
DB_PASSWORD=your_database_password
DB_PORT=3306

# -------------------------------------------------------------------
# Redis Configuration (Required for caching)
# -------------------------------------------------------------------
# For local development: localhost
# For Docker with external Redis: redis (container name in redis_default network)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# -------------------------------------------------------------------
# Application Configuration
# -------------------------------------------------------------------
APP_ENV=production
APP_URL=https://your-domain.com
BASE_URL=https://your-domain.com

# -------------------------------------------------------------------
# Storage Configuration (Choose one or multiple)
# -------------------------------------------------------------------

# Local Storage (default)
# No configuration needed

# Selectel S3 Storage (Optional)
SELECTEL_STATUS=0
SELECTEL_BUCKET=
SELECTEL_REGION=ru-1
SELECTEL_KEY=
SELECTEL_SECRET=
SELECTEL_ENDPOINT=https://s3.ru-1.storage.selcloud.ru
SELECTEL_PUBLIC_BASE=

# MinIO Storage (Optional)
MINIO_STATUS=0
MINIO_BUCKET=
MINIO_REGION=us-east-1
MINIO_KEY=
MINIO_SECRET=
MINIO_ENDPOINT=
MINIO_PUBLIC_BASE=
MINIO_PATH_STYLE=1
MINIO_SSL_VERIFY=0

# AWS S3 Storage (Optional)
S3_STATUS=0
S3_BUCKET=
S3_REGION=
S3_KEY=
S3_SECRET=
S3_PUBLIC_BASE=

# Wasabi Storage (Optional)
WASABI_STATUS=0
WASABI_BUCKET=
WASABI_REGION=
WASABI_KEY=
WASABI_SECRET=
WASABI_PUBLIC_BASE=

# DigitalOcean Spaces (Optional)
SPACES_STATUS=0
SPACES_NAME=
SPACES_REGION=
SPACES_KEY=
SPACES_SECRET=
SPACES_PUBLIC_BASE=

# -------------------------------------------------------------------
# FFmpeg Configuration (Required for video processing)
# -------------------------------------------------------------------
# For Docker/Production: Use paths from Alpine Linux package
FFMPEG_STATUS=1
FFMPEG_PATH=/usr/bin/ffmpeg
FFMPEG_PROBE=/usr/bin/ffprobe

# For local development on macOS: Use Homebrew paths
# FFMPEG_PATH=/opt/homebrew/bin/ffmpeg
# FFMPEG_PROBE=/opt/homebrew/bin/ffprobe
