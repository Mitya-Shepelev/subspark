# SubSpark Environment Configuration Example
# Copy this file to .env and fill in your production values
# NEVER commit .env to git!

# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_SERVER=localhost
DB_USERNAME=your_db_user
DB_PASSWORD=your_secure_password
DB_DATABASE=subspark_production

# ============================================
# APPLICATION
# ============================================
APP_ENV=production
APP_URL=https://your-domain.com
# or
# BASE_URL=https://your-domain.com

# ============================================
# AMAZON S3 STORAGE (optional)
# ============================================
S3_STATUS=0
S3_BUCKET=your-bucket-name
S3_REGION=us-east-1
S3_KEY=your-access-key
S3_SECRET=your-secret-key
S3_PUBLIC_BASE=https://cdn.your-domain.com/

# ============================================
# WASABI STORAGE (optional)
# ============================================
WASABI_STATUS=0
WASABI_BUCKET=your-bucket-name
WASABI_REGION=us-east-1
WASABI_KEY=your-access-key
WASABI_SECRET=your-secret-key
WASABI_PUBLIC_BASE=

# ============================================
# DIGITALOCEAN SPACES (optional)
# ============================================
SPACES_STATUS=0
SPACES_NAME=your-space-name
SPACES_REGION=nyc3
SPACES_KEY=your-access-key
SPACES_SECRET=your-secret-key
SPACES_PUBLIC_BASE=

# ============================================
# MINIO STORAGE (optional)
# ============================================
MINIO_STATUS=0
MINIO_BUCKET=your-bucket-name
MINIO_REGION=us-east-1
MINIO_KEY=your-access-key
MINIO_SECRET=your-secret-key
MINIO_ENDPOINT=https://minio.your-domain.com:9000
MINIO_PUBLIC_BASE=
MINIO_PATH_STYLE=true
MINIO_SSL_VERIFY=true

# ============================================
# EMAIL SETTINGS (configured via admin panel)
# ============================================
# These are usually set in the database via admin panel
# But can be overridden here if needed

# ============================================
# FORCE INDEX IN URLS (for Nginx)
# ============================================
# Set to true if using Nginx
FORCE_INDEX_IN_URLS=false
