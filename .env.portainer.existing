# SubSpark - Portainer Stack Environment Variables
# Для использования с СУЩЕСТВУЮЩИМИ MySQL и phpMyAdmin

# ==============================================
# APPLICATION
# ==============================================
APP_PORT=8000
APP_ENV=production
APP_URL=https://your-domain.com

# ==============================================
# DATABASE (Existing MySQL Container)
# ==============================================
# ВАЖНО: Укажите имя вашего MySQL контейнера!
# Обычно это: mysql-8, mysql, mariadb и т.д.
# Проверьте имя в Portainer -> Containers
DB_SERVER=mysql-8

# Создайте БД и пользователя в phpMyAdmin:
# CREATE DATABASE subspark CHARACTER SET utf8mb4 COLLATE utf8mb4_unicode_ci;
# CREATE USER 'subspark_user'@'%' IDENTIFIED BY 'your_password';
# GRANT ALL PRIVILEGES ON subspark.* TO 'subspark_user'@'%';
# FLUSH PRIVILEGES;

DB_DATABASE=subspark
DB_USERNAME=subspark_user
DB_PASSWORD=your_secure_password_here

# ==============================================
# OBJECT STORAGE (optional)
# ==============================================

# Amazon S3
S3_STATUS=0
S3_BUCKET=
S3_REGION=us-east-1
S3_KEY=
S3_SECRET=
S3_PUBLIC_BASE=

# Wasabi
WASABI_STATUS=0
WASABI_BUCKET=
WASABI_REGION=us-east-1
WASABI_KEY=
WASABI_SECRET=

# DigitalOcean Spaces
SPACES_STATUS=0
SPACES_NAME=
SPACES_REGION=nyc3
SPACES_KEY=
SPACES_SECRET=
SPACES_PUBLIC_BASE=

# MinIO
MINIO_STATUS=0
MINIO_BUCKET=
MINIO_REGION=us-east-1
MINIO_KEY=
MINIO_SECRET=
MINIO_ENDPOINT=
MINIO_PUBLIC_BASE=
MINIO_PATH_STYLE=true
MINIO_SSL_VERIFY=true
