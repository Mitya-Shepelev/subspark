{
  "version": "2",
  "templates": [
    {
      "type": 3,
      "title": "SubSpark",
      "description": "SubSpark social platform - connect to existing MySQL and Nginx Proxy Manager",
      "note": "Make sure your MySQL container is running and networks (mysql-8_default, nginx-proxy-manager_default) exist",
      "categories": ["Social Network", "PHP"],
      "platform": "linux",
      "logo": "https://raw.githubusercontent.com/Mitya-Shepelev/subspark/main/uploads/covers/default.jpg",
      "repository": {
        "url": "https://github.com/Mitya-Shepelev/subspark",
        "stackfile": "docker-compose.portainer.yml"
      },
      "env": [
        {
          "name": "APP_PORT",
          "label": "Application Port",
          "description": "External port for the application",
          "default": "8001"
        },
        {
          "name": "DB_SERVER",
          "label": "MySQL Container Name",
          "description": "Name of your existing MySQL container",
          "default": "mysql-8"
        },
        {
          "name": "DB_USERNAME",
          "label": "Database Username",
          "description": "Database user (create via phpMyAdmin first)",
          "default": "subspark_user"
        },
        {
          "name": "DB_PASSWORD",
          "label": "Database Password",
          "description": "Database password"
        },
        {
          "name": "DB_DATABASE",
          "label": "Database Name",
          "description": "Database name (create via phpMyAdmin first)",
          "default": "subspark"
        },
        {
          "name": "APP_URL",
          "label": "Application URL",
          "description": "Full URL where the app will be accessible",
          "default": "http://localhost:8001"
        },
        {
          "name": "APP_ENV",
          "label": "Environment",
          "description": "Application environment",
          "default": "production",
          "select": [
            {
              "text": "Production",
              "value": "production"
            },
            {
              "text": "Development",
              "value": "development"
            }
          ]
        }
      ]
    }
  ]
}
